@{
    ViewBag.Title = "Roles";
}

<div class="container-fluid page-full-height">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">@ViewBag.Title</h5>
        </div>
        <div class="card-body">
            <div id="grid"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // กำหนด Enum สำหรับ RoleType ใน Frontend (ปรับค่าตาม Enums จริงใน C#)
        const roleTypes = [
            { id: 0, name: 'User' },
            { id: 1, name: 'Manager' },
            { id: 2, name: 'Admin' },
            { id: 3, name: 'SuperAdmin' }
        ];

        $(() => {
            const grid = $("#grid").dxDataGrid({
                dataSource: createDataStore(serviceUrl, 'admin/RolesCRUD', {
                    key: 'Id',
                }),
                remoteOperations: true,
                columnAutoWidth: true,
                showBorders: true,
                scrolling: { mode: "virtual" },
                height: "100%",
                headerFilter: { visible: true, search: { enabled: true } },
                searchPanel: { visible: true, width: 300 },
                groupPanel: { emptyPanelText: '@ViewBag.Title', visible: true },
                scrolling: { mode: 'virtual' },
                export: { enabled: true },
                onExporting: (e) => handleExporting(e, '@ViewBag.Title'),
                editing: {
                    mode: "popup",
                    allowUpdating: true,
                    allowDeleting: true,
                    allowAdding: true,
                    useIcons: true,
                    form: {
                        items: [
                            {
                                itemType: 'group',
                                colCount: 2,
                                colSpan: 2,
                                items: [
                                    { dataField: 'Id', editorOptions: { disabled: true } },
                                    { dataField: 'Name' },
                                    { dataField: 'DivisionId' },
                                    { dataField: 'RoleType' }
                                ]
                            }
                        ]
                    }
                },
                columns: [
                    { dataField: "Id", caption: "ID", width: 50, allowUpdating: false },
                    { dataField: "Name", caption: "Role Name" },
                    {
                        dataField: "DivisionId",
                        caption: "Division",
                        lookup: {
                            dataSource: createDataStore(serviceUrl, 'admin/DivisionsCRUD', { key: 'Id' }),
                            displayExpr: 'Name',
                            valueExpr: 'Id'
                        }
                    },
                    {
                        dataField: "RoleType",
                        caption: "Role Type",
                        lookup: {
                            dataSource: roleTypes,
                            displayExpr: 'name',
                            valueExpr: 'id'
                        }
                    }
                ],
            }).dxDataGrid('instance');
        })
    </script>
}