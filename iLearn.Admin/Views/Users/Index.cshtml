@{
    ViewBag.Title = "Users";
}


<div class="container-fluid page-full-height">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">@ViewBag.Title</h5>
        </div>
        <div class="card-body">
            <div id="grid"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(() => {
            const grid = $("#grid").dxDataGrid({
                dataSource: createDataStore(serviceUrl, 'admin/UsersCRUD', {
                    key: 'Id',
                }),
                remoteOperations: true,
                columnAutoWidth: true,
                showBorders: true,
                scrolling: { mode: "virtual" },
                height: "100%",
                selection: { mode: 'single' },
                hoverStateEnabled: true,
                headerFilter: { visible: true, search: { enabled: true } },
                searchPanel: { visible: true, width: 300 },
                groupPanel: { emptyPanelText: '@ViewBag.Title', visible: true },
                scrolling: { mode: 'virtual' },
                export: { enabled: true, allowExportSelectedData: false },
                onExporting: (e) => handleExporting(e, '@ViewBag.Title'),
                editing: {
                    mode: "popup",
                    allowUpdating: true,
                    allowDeleting: true,
                    allowAdding: true,
                    useIcons: true,
                    form: {
                        items: [
                            {
                                itemType: 'group',
                                colCount: 1,
                                colSpan: 2,
                                items: [
                                    { dataField: 'Id', editorOptions: { disabled: true } },
                                    { dataField: 'Nid' }
                                ]
                            }
                        ]
                    }
                },
                columns: [
                    { dataField: "Id", caption: "ID", width: 50, allowUpdating: false },
                    { dataField: "Nid", caption: "National ID / Username" },
                    // สามารถเพิ่ม Audit fields เช่น CreatedDate ได้ถ้าต้องการ
                    { dataField: "CreatedDate", dataType: "date", format: "yyyy-MM-dd HH:mm", allowEditing: false, visible: false }
                ],
            }).dxDataGrid('instance');
        })
    </script>
}