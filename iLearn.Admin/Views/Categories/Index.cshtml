@{
    ViewBag.Title = "Categories";
}



<div class="container-fluid page-full-height">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">@ViewBag.Title</h5>
        </div>
        <div class="card-body">
            <div id="grid"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(() => {
            const grid = $("#grid").dxDataGrid({
                dataSource: createDataStore(serviceUrl, 'admin/CategoriesCRUD', {
                    key: 'Id',
                }),
                remoteOperations: true,
                columnAutoWidth: true,
                showBorders: true,
                scrolling: { mode: "virtual" },
                height: "100%",
                selection: {
                    mode: 'single',
                },
                hoverStateEnabled: true,
                headerFilter: {
                    visible: true,
                    search: { enabled: true }
                },
                searchPanel: {
                    visible: true,
                    width: 300,
                    placeholder: "Search categories..."
                },
                groupPanel: {
                    visible: true,
                    emptyPanelText: 'Drag a column header here to group by that column',
                },
                scrolling: {
                    mode: 'virtual',
                },
                export: {
                    enabled: true,
                    allowExportSelectedData: false,
                },
                onExporting: (e) => handleExporting(e, 'Categories_Data'),
                editing: {
                    mode: "popup",
                    allowUpdating: true,
                    allowDeleting: true,
                    allowAdding: true,
                    useIcons: true,
                    popup: {
                        title: "Category Info",
                        showTitle: true,
                        width: 500, // ขนาด Popup เล็กกว่า Course เพราะข้อมูลน้อยกว่า
                        height: 350
                    },
                    form: {
                        items: [
                            {
                                itemType: 'group',
                                colCount: 1,
                                colSpan: 2,
                                items: [
                                    {
                                        dataField: 'Id',
                                        editorOptions: { disabled: true }
                                    },
                                    {
                                        dataField: 'Name',
                                        validationRules: [{ type: "required" }]
                                    },
                                    {
                                        dataField: 'IsActive',
                                        editorType: 'dxCheckBox',
                                        label: { visible: false },
                                        editorOptions: {
                                            text: 'Is Active'
                                        }
                                    },
                                    // หากมี ParentId (หมวดหมู่แม่) สามารถเปิดใช้ส่วนนี้ได้
                                    /*
                                    {
                                        dataField: "ParentId",
                                        label: { text: "Parent Category" },
                                        editorType: "dxSelectBox",
                                        editorOptions: {
                                            dataSource: createDataStore(serviceUrl, 'Categories', { key: 'Id' }),
                                            displayExpr: 'Name',
                                            valueExpr: 'Id',
                                            showClearButton: true,
                                            placeholder: "Select Parent Category (Optional)"
                                        }
                                    }
                                    */
                                ]
                            }
                        ]
                    }
                },
                columns: [
                    {
                        dataField: "Id",
                        caption: "ID",
                        width: 60,
                        allowUpdating: false,
                        sortOrder: 'desc'
                    },
                    {
                        dataField: "Name",
                        caption: "Category Name",
                        validationRules: [{ type: "required" }]
                    },
                    /*
                    // Column สำหรับแสดงชื่อหมวดหมู่แม่ (ถ้ามี)
                    {
                        dataField: "ParentId",
                        caption: "Parent Category",
                        visible: false,
                        lookup: {
                            dataSource: createDataStore(serviceUrl, 'Categories', { key: 'Id' }),
                            displayExpr: 'Name',
                            valueExpr: 'Id',
                        }
                    },
                    */
                    {
                        dataField: "IsActive",
                        caption: "Active",
                        dataType: "boolean",
                        width: 100
                    },
                    // แสดงวันที่สร้าง/แก้ไข (Read-only)
                    {
                        dataField: "CreatedDate",
                        caption: "Created Date",
                        dataType: "date",
                        format: "dd/MM/yyyy HH:mm",
                        allowEditing: false,
                        visible: false
                    }
                ],
            }).dxDataGrid('instance');
        })
    </script>
}