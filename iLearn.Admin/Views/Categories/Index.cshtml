@{
    ViewBag.Title = "Categories";
}

<div class="container-fluid page-full-height">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">@ViewBag.Title</h5>
        </div>
        <div class="card-body">
            <div id="grid"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(() => {
            const grid = $("#grid").dxDataGrid({
                dataSource: createDataStore(serviceUrl, 'admin/CategoriesCRUD', {
                    key: 'Id',
                }),
                remoteOperations: true,
                columnAutoWidth: true,
                showBorders: true,
                scrolling: { mode: "virtual" },
                height: "100%",
                selection: { mode: 'single' },
                hoverStateEnabled: true,
                headerFilter: { visible: true, search: { enabled: true } },
                searchPanel: { visible: true, width: 300, placeholder: "Search categories..." },
                groupPanel: { visible: true, emptyPanelText: 'Drag a column header here to group by that column' },
                export: { enabled: true, allowExportSelectedData: false },
                onExporting: (e) => handleExporting(e, 'Categories_Data'),
              onRowDblClick: function(e) {
                    if (e.data && e.data.Id) {
                        window.location.href = '@Url.Action("Index", "Courses")?categoryId=' + e.data.Id;
                    }
                },
                editing: {
                    mode: "popup",
                    allowUpdating: true,
                    allowDeleting: true,
                    allowAdding: true,
                    useIcons: true,
                    popup: {
                        title: "Category Info",
                        showTitle: true,
                        width: 500,
                        height: 450 // เพิ่มความสูงเล็กน้อยเพื่อรองรับ field ใหม่
                    },
                    form: {
                        items: [
                            {
                                itemType: 'group',
                                colCount: 1,
                                colSpan: 2,
                                items: [
                                    {
                                        dataField: 'Id',
                                        editorOptions: { disabled: true }
                                    },
                                    {
                                        dataField: 'Name',
                                        validationRules: [{ type: "required" }]
                                    },
                                    // [เพิ่ม] Field สำหรับเลือก Division
                                    {
                                        dataField: "DivisionId",
                                        label: { text: "Division" },
                                        editorType: "dxSelectBox",
                                        editorOptions: {
                                            // ใช้ createDataStore ดึงข้อมูลจาก DivisionsCRUD หรือ api/Divisions
                                            dataSource: createDataStore(serviceUrl, 'admin/DivisionsCRUD', { key: 'Id' }),
                                            displayExpr: 'Name',
                                            valueExpr: 'Id',
                                            showClearButton: true,
                                            placeholder: "Select Division (Optional)"
                                        }
                                    },
                                    {
                                        dataField: 'IsActive',
                                        editorType: 'dxCheckBox',
                                        label: { visible: false },
                                        editorOptions: {
                                            text: 'Is Active'
                                        }
                                    }
                                ]
                            }
                        ]
                    }
                },
                columns: [
                    {
                        dataField: "Id",
                        caption: "ID",
                        width: 60,
                        allowUpdating: false,
                        sortOrder: 'desc'
                    },
                    {
                        dataField: "Name",
                        caption: "Category Name",
                        validationRules: [{ type: "required" }]
                    },
                    // [เพิ่ม] Column Division พร้อม Lookup
                    {
                        dataField: "DivisionId",
                        caption: "Division",
                        lookup: {
                            dataSource: createDataStore(serviceUrl, 'admin/DivisionsCRUD', { key: 'Id' }),
                            displayExpr: 'Name',
                            valueExpr: 'Id',
                        }
                    },
                    {
                        dataField: "IsActive",
                        caption: "Active",
                        dataType: "boolean",
                        width: 100
                    },
                    {
                        dataField: "CreatedAt",
                        caption: "Created Date",
                        dataType: "date",
                        format: "dd/MM/yyyy HH:mm",
                        allowEditing: false,
                        visible: false
                    }
                ],
            }).dxDataGrid('instance');
        })
    </script>
}