@{
    ViewBag.Title = "Assignment Rules";
}

<div class="container-fluid page-full-height">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">@ViewBag.Title</h5>
        </div>
        <div class="card-body">
            <div id="grid"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(() => {
            const grid = $("#grid").dxDataGrid({
                dataSource: createDataStore(serviceUrl, 'admin/AssignmentRulesCRUD', {
                    key: 'Id',
                }),
                remoteOperations: true,
                columnAutoWidth: true,
                showBorders: true,
                headerFilter: { visible: true },
                searchPanel: { visible: true, width: 300 },
                scrolling: { mode: "virtual" },
                height: "100%",
                editing: {
                    mode: "popup",
                    allowUpdating: true,
                    allowDeleting: true,
                    allowAdding: true,
                    useIcons: true,
                    form: {
                        items: [
                            { dataField: 'Id', editorOptions: { disabled: true } },
                            { dataField: 'CourseId' },
                            {
                                dataField: 'DivisionId',
                                editorOptions: { showClearButton: true },
                                helpText: "Leave empty for All Divisions"
                            },
                            {
                                dataField: 'RoleId',
                                editorOptions: { showClearButton: true },
                                helpText: "Leave empty for All Roles"
                            }
                        ]
                    }
                },
                columns: [
                    { dataField: "Id", caption: "ID", width: 50, allowUpdating: false },
                    {
                        dataField: "CourseId",
                        caption: "Course",
                        lookup: {
                            dataSource: createDataStore(serviceUrl, 'admin/CoursesCRUD', { key: 'Id' }),
                            displayExpr: 'Title',
                            valueExpr: 'Id'
                        },
                        validationRules: [{ type: "required" }]
                    },
                    {
                        dataField: "DivisionId",
                        caption: "Division (Target)",
                        lookup: {
                            dataSource: createDataStore(serviceUrl, 'admin/DivisionsCRUD', { key: 'Id' }),
                            displayExpr: 'Name',
                            valueExpr: 'Id'
                        }
                    },
                    {
                        dataField: "RoleId",
                        caption: "Role (Target)",
                        lookup: {
                            dataSource: createDataStore(serviceUrl, 'admin/RolesCRUD', { key: 'Id' }),
                            displayExpr: 'Name',
                            valueExpr: 'Id'
                        }
                    }
                ],
            }).dxDataGrid('instance');
        })
    </script>
}