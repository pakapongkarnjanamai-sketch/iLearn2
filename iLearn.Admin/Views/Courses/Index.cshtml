@{
    ViewBag.Title = "Courses Management";
    var categoryId = ViewBag.categoryId;
}

<div class="container-fluid page-full-height">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">@ViewBag.Title (Category ID: @categoryId)</h5>
        </div>
        <div class="card-body">
            <div id="grid"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const categoriesStore = createDataStore(serviceUrl, 'admin/CategoriesCRUD', { key: 'Id' });

        const courseTypes = [
            { id: 0, name: 'Special (Rule-based)' },
            { id: 1, name: 'General (Auto-assign)' }
        ];
     
        $(() => {

              let initialFilter = null;

            if (@categoryId) {
                initialFilter = ["categoryId", "=", parseInt(@categoryId)];
            }
            // ใช้ createDataStore เชื่อมต่อกับ API CRUD มาตรฐาน (admin/CoursesCRUD)
            const coursesStore = createDataStore(serviceUrl, 'admin/CoursesCRUD', { key: 'Id' });

            $("#grid").dxDataGrid({
                dataSource: coursesStore,
                filterValue: initialFilter,
                remoteOperations: true,
                columnAutoWidth: true,
                showBorders: true,
                height: "100%",
                scrolling: { mode: "virtual" },
                searchPanel: { visible: true, width: 300 },
               onRowDblClick: function(e) {
                    if (e.data && e.data.Id) {
                        window.location.href = '@Url.Action("Version", "Courses")?courseId=' + e.data.Id;
                    }
                },
                // เปิดใช้งานการแก้ไขแบบ Popup มาตรฐาน
                editing: {
                    mode: "popup",
                    allowAdding: true,
                    allowUpdating: true,
                    allowDeleting: true,
                    useIcons: true,
                    popup: {
                        title: "Course Info",
                        showTitle: true,
                        width: 700, // ลดความกว้างลงเพราะไม่มี Resources แล้ว
                        height: 550
                    },
                    form: {
                        items: [
                            {
                                itemType: "group",
                                caption: "Basic Info",
                                colCount: 1,
                                items: [
                                    {
                                        dataField: "Code",
                                        validationRules: [{ type: "required" }]
                                    },
                                    {
                                        dataField: "Title",
                                        validationRules: [{ type: "required" }]
                                    },
                                    {
                                        dataField: "Type",
                                        editorType: "dxSelectBox",
                                        editorOptions: {
                                            dataSource: courseTypes,
                                            displayExpr: 'name',
                                            valueExpr: 'id'
                                        },
                                        validationRules: [{ type: "required" }]
                                    },
                                    {
                                        dataField: "CategoryId",
                                        editorType: "dxSelectBox",
                                        editorOptions: {
                                            dataSource: categoriesStore,
                                            displayExpr: 'Name',
                                            valueExpr: 'Id',
                                            searchEnabled: true,
                                            placeholder: "Select Category"
                                        },
                                        validationRules: [{ type: "required" }]
                                    },
                                    {
                                        dataField: "Description",
                                        editorType: "dxTextArea",
                                        editorOptions: {
                                            height: 100,
                                            placeholder: "Enter course description..."
                                        },
                                        colSpan: 1
                                    },
                                    {
                                        dataField: "IsActive",
                                        editorType: "dxCheckBox",
                                        editorOptions: { text: "Is Active" }
                                    }
                                ]
                            }
                        ]
                    }
                },

                columns: [
                    {
                        type: "buttons",
                        width: 110,
                        buttons: [
                            "edit",
                            "delete",
                            {
                                hint: "Manage Versions",
                                icon: "fas fa-code-branch",
                                onClick: function(e) {
                                    // ลิงก์ไปยังหน้า Version พร้อมแนบ courseId
                                    window.location.href = '@Url.Action("Version", "Courses")?courseId=' + e.row.data.Id;
                                }
                            }
                        ]
                    },
                    {
                        dataField: "Id",
                        caption: "ID",
                        width: 60,
                        sortOrder: 'desc',
                        allowEditing: false
                    },
                    {
                        dataField: "Code",
                        caption: "Code",
                        width: 120
                    },
                    {
                        dataField: "Title",
                        caption: "Title",
                        minWidth: 200
                    },
                    {
                        dataField: "CategoryId",
                        caption: "Category",
                        width: 150,
                        lookup: {
                            dataSource: categoriesStore,
                            displayExpr: 'Name',
                            valueExpr: 'Id'
                        }
                    },
                    {
                        dataField: "Type",
                        caption: "Type",
                        width: 150,
                        lookup: {
                            dataSource: courseTypes,
                            displayExpr: 'name',
                            valueExpr: 'id'
                        }
                    },
                    {
                        dataField: "IsActive",
                        caption: "Active",
                        dataType: "boolean",
                        width: 80
                    }
                ],
            });
        });
    </script>
}