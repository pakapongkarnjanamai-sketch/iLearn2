@{
    ViewBag.Title = "Courses";
}

<div class="container-fluid page-full-height">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">@ViewBag.Title</h5>
        </div>
        <div class="card-body">
            <div id="grid"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // กำหนด Enum ตาม iLearn.Domain.Enums.CourseType
        const courseTypes = [
            { id: 0, name: 'Special (Rule-based)' },
            { id: 1, name: 'General (Auto-assign)' }
        ];

        $(() => {
            const grid = $("#grid").dxDataGrid({
                dataSource: createDataStore(serviceUrl, 'admin/CoursesCRUD', {
                    key: 'Id',
                }),
                remoteOperations: true,
                columnAutoWidth: true,
                showBorders: true,
                scrolling: { mode: "virtual" },
                height: "100%",
                selection: { mode: 'single' },
                hoverStateEnabled: true,
                headerFilter: { visible: true, search: { enabled: true } },
                searchPanel: { visible: true, width: 300, placeholder: "Search courses..." },
                groupPanel: { emptyPanelText: 'Drag a column header here to group by that column', visible: true },
                export: { enabled: true, allowExportSelectedData: false },
                onExporting: (e) => handleExporting(e, 'Courses_Data'),

                editing: {
                    mode: "popup",
                    allowUpdating: true,
                    allowDeleting: true,
                    allowAdding: true,
                    useIcons: true,
                    popup: {
                        title: "Course Info",
                        showTitle: true,
                        width: 700,
                        height: 500
                    },
                    form: {
                        items: [
                            {
                                itemType: 'group',
                                caption: "Basic Information",
                                colCount: 2,
                                colSpan: 2,
                                items: [
                                    { dataField: 'Id', editorOptions: { disabled: true } },
                                    { dataField: 'IsActive' },

                                    {
                                        dataField: 'Code',
                                        validationRules: [{ type: "required" }]
                                    },
                                    {
                                        dataField: 'Version',
                                        editorType: 'dxNumberBox',
                                        editorOptions: { min: 1, format: "#" }
                                    },

                                    {
                                        dataField: 'Title',
                                        colSpan: 2,
                                        validationRules: [{ type: "required" }]
                                    },

                                    {
                                        dataField: 'Type',
                                        label: { text: "Course Type" },
                                        editorType: "dxSelectBox",
                                        editorOptions: {
                                            dataSource: courseTypes,
                                            displayExpr: 'name',
                                            valueExpr: 'id',
                                        },
                                        validationRules: [{ type: "required" }]
                                    }
                                ]
                            },
                            {
                                itemType: 'group',
                                caption: "Details",
                                colCount: 1,
                                colSpan: 2,
                                items: [
                                    {
                                        dataField: 'Description',
                                        editorType: 'dxTextArea',
                                        editorOptions: {
                                            height: 100,
                                            placeholder: 'Enter course description here...',
                                        },
                                    },
                                ]
                            }
                        ]
                    }
                },
                columns: [
                    { dataField: "Id", caption: "ID", width: 60, allowUpdating: false, sortOrder: 'desc' },
                    {
                        dataField: "Code",
                        caption: "Code",
                        width: 100,
                        validationRules: [{ type: "required" }]
                    },
                    {
                        dataField: "Title",
                        caption: "Title",
                        minWidth: 200,
                        validationRules: [{ type: "required" }]
                    },
                    {
                        dataField: "Type",
                        caption: "Type",
                        width: 150,
                        lookup: {
                            dataSource: courseTypes,
                            displayExpr: 'name',
                            valueExpr: 'id',
                        }
                    },
                    {
                        dataField: "Version",
                        caption: "Version",
                        width: 80,
                        alignment: "center"
                    },
                    {
                        dataField: "IsActive",
                        caption: "Active",
                        dataType: "boolean",
                        width: 80
                    },
                    { dataField: "Description", visible: false }
                ],
            }).dxDataGrid('instance');
        })
    </script>
}